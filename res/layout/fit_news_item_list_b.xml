<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:background="@drawable/fit_item_list_selector"
    android:orientation="horizontal"
    android:padding="1dp"
    android:weightSum="100" >

    <ImageView
        android:id="@+id/img_new_item_list_fit"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:layout_weight="25"
        android:padding="1dp"
        android:src="@drawable/no_data" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="75"
        android:orientation="vertical"
        android:weightSum="100" >

        <TextView
            android:id="@+id/lab_title_item_list_fit"
            style="@style/lab_title_fit_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:padding="1dp"
            android:text="Titulo" />

        <TextView
            android:id="@+id/lab_detail_item_list_fit"
            style="@style/lab_detail_fit_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:padding="1dp"
            android:text="TextView" />

        <LinearLayout
            android:id="@+id/tags_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="20"
            android:padding="1dp" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>